<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/addTasksFragment">

    <fragment
        android:id="@+id/addTasksFragment"
        android:name="com.example.to_do_list.AddTasksFragment"
        android:label="fragment_add_tasks"
        tools:layout="@layout/fragment_add_tasks" >
        <action
            android:id="@+id/action_addTasksFragment_to_allTasksFragment"
            app:destination="@id/allTasksFragment" />
        <action
            android:id="@+id/action_addTasksFragment_to_resumeFragment"
            app:destination="@id/resumeFragment" />
    </fragment>
    <fragment
        android:id="@+id/allTasksFragment"
        android:name="com.example.to_do_list.AllTasksFragment"
        android:label="AllTasksFragment" >
        <action
            android:id="@+id/action_allTasksFragment_to_addTasksFragment"
            app:destination="@id/addTasksFragment" />
        <action
            android:id="@+id/action_allTasksFragment_to_resumeFragment"
            app:destination="@id/resumeFragment" />
    </fragment>
    <fragment
        android:id="@+id/resumeFragment"
        android:name="com.example.to_do_list.ResumeFragment"
        android:label="fragment_resume"
        tools:layout="@layout/fragment_resume" >
        <action
            android:id="@+id/action_resumeFragment_to_addTasksFragment"
            app:destination="@id/addTasksFragment" />
        <action
            android:id="@+id/action_resumeFragment_to_allTasksFragment"
            app:destination="@id/allTasksFragment" />
    </fragment>
</navigation>