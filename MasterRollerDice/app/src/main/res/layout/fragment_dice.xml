<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0A1A1A">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master Roll Dice"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Primera fila de dados -->
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:layout_marginTop="24dp">

            <!-- D4 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_cuatro"
                        android:contentDescription="D4" />

                    <TextView
                        android:id="@+id/countD4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD4"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD4"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- D6 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_seis"
                        android:contentDescription="D6" />

                    <TextView
                        android:id="@+id/countD6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD6"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD6"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- D8 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_ocho"
                        android:contentDescription="D8" />

                    <TextView
                        android:id="@+id/countD8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD8"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD8"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Segunda fila de dados -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1"
            android:layout_marginTop="8dp">

            <!-- D10 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_diez"
                        android:contentDescription="D10" />

                    <TextView
                        android:id="@+id/countD10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD10"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD10"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- D12 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_doce"
                        android:contentDescription="D12" />

                    <TextView
                        android:id="@+id/countD12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD12"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD12"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- D20 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_veinte"
                        android:contentDescription="D20" />

                    <TextView
                        android:id="@+id/countD20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD20"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD20"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Tercera fila - D100 -->
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row2"
            android:layout_marginTop="8dp">

            <!-- D100 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#1A2F2F"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dado_cien"
                        android:contentDescription="D100" />

                    <TextView
                        android:id="@+id/countD100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <Button
                            android:id="@+id/btnAddD100"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <Button
                            android:id="@+id/btnRemoveD100"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:backgroundTint="#4A9D9D"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />
        </LinearLayout>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="El resultado de la tirada es:"
            android:textColor="#8FAAAA"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row3"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/totalSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultText"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/diceBreakdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#8FAAAA"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalSum"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diceBreakdown"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpiar"
                android:textColor="#0A1A1A"
                android:backgroundTint="#FFFFFF"
                android:paddingStart="32dp"
                android:paddingEnd="32dp" />

            <Button
                android:id="@+id/btnRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tirar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7B3FF2"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>